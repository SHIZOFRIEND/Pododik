<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2F0F8"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/cityNameEditText"
        android:layout_width="154dp"
        android:layout_height="43dp"
        android:layout_centerHorizontal="true"
        android:text="City Name"
        android:textAlignment="center"
        android:textColor="#4B6E23"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:cardBackgroundColor="#D0F3A7"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/weatherIconImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_cloudy" />

            <TextView
                android:id="@+id/temperatureTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="Temperature: 25°C"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/weatherConditionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="Weather Condition: Cloudy"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/humidityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="Humidity: 50%"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/windSpeedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="Wind Speed: 10 km/h"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="20sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Первый ряд карточек с прогнозом погоды -->

    <TextView
        android:id="@+id/firstRowTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Прогноз погоды на одну неделю"
        android:textAlignment="center"
        android:textColor="#4B6E23"
        android:textSize="20sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/forecastRecyclerView7Days"
        android:layout_width="wrap_content"
        android:layout_height="114dp"
        android:layout_marginTop="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_forecast_card" />


    <TextView
        android:id="@+id/secondRowTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Прогноз погоды на две недели"
        android:textColor="#4B6E23"
        android:textSize="20sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/forecastRecyclerView14Days"
        android:layout_width="wrap_content"
        android:layout_height="109dp"
        android:layout_marginTop="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_forecast_card" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="16dp"
        android:background="#B1EFF7"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Первая кнопка - погода -->
        <ImageButton
            android:id="@+id/weatherButton"
            android:layout_width="72dp"
            android:layout_height="67dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Weather"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/weather_icon" />

        <!-- Вторая кнопка - настройки -->
        <ImageButton
            android:id="@+id/PreferenseButton"
            android:layout_width="69dp"
            android:layout_height="67dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Settings"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/settings_icon" />


        <!-- Третья кнопка - чат -->
        <ImageButton
            android:id="@+id/chatbutton"
            android:layout_width="70dp"
            android:layout_height="68dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Chat"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/chat_icon" />

    </LinearLayout>

</LinearLayout>
